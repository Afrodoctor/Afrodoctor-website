---
/*
  afrodoctor-app.astro
*/
import BaseLayout from '../layouts/Layout.astro';

const screenshotImages = [
  '/images/afrodoctor_app/screenshot1.jpeg',
  '/images/afrodoctor_app/screenshot.jpeg',
  '/images/afrodoctor_app/screenshot2.jpeg',
  '/images/afrodoctor_app/screenshot3.jpeg',
];

const features = [
  { 
    title: 'Secure Bookings', 
    body: 'Book vetted health workers and get confirmed appointments without travel hassles.',
    icon: 'üìÖ'
  },
  { 
    title: 'Teleconsultations', 
    body: 'Video & chat consultations that connect patients to clinicians quickly.',
    icon: 'üé•'
  },
  { 
    title: 'Digital Records', 
    body: 'Store and access patient history securely ‚Äî synced across facilities where enabled.',
    icon: 'üìä'
  },
  { 
    title: 'Payments & Insurance', 
    body: 'Integrated payments and insurance data to reduce billing friction.',
    icon: 'üí≥'
  },
];
---
<BaseLayout title="Afrodoctor Mobile App - Healthcare on Your Phone">
  <!-- Hero Section -->
  <section class="relative py-20 md:py-28 bg-blue-900 dark:bg-blue-800 text-white overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 bg-black/10"></div>
    <div class="absolute top-10 left-10 w-20 h-20 bg-white/10 rounded-full blur-xl"></div>
    <div class="absolute bottom-10 right-10 w-32 h-32 bg-blue-600/20 rounded-full blur-2xl"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="space-y-6">
          <div class="inline-flex items-center gap-3 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 text-sm font-semibold animate-fade-in">
            <span class="text-white/90">üì±</span>
            <span>Afrodoctor Mobile</span>
          </div>

           <h1 class="text-5xl md:text-6xl font-extrabold leading-tight tracking-tight">
            Healthcare on Your Phone
            <span class="block text-transparent bg-clip-text bg-gradient-to-r from-teal-300 to-blue-300 mt-2">
              Anytime, Anywhere
            </span>
          </h1>

          <p class="text-xl text-blue-100 leading-relaxed max-w-2xl">
            Connect with vetted health professionals, schedule secure appointments, and manage your health records ‚Äî designed specifically for African healthcare needs.
          </p>

          <!-- Enhanced CTA buttons -->
          <div class="flex flex-wrap gap-4 pt-4">
            <a 
              href="#" 
              class="group px-8 py-4 bg-white text-blue-900 font-bold rounded-2xl shadow-2xl hover:shadow-3xl transition-all duration-300 transform hover:scale-105 hover:-translate-y-1 flex items-center gap-2"
              aria-label="Download on Play Store"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
              </svg>
              Google Play
            </a>
            <a 
              href="#" 
              class="group px-8 py-4 border-2 border-white/40 text-white rounded-2xl backdrop-blur-md hover:bg-white/20 hover:border-white/60 transition-all duration-300 flex items-center gap-2"
              aria-label="Download on App Store"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.71,19.5C17.88,20.74 17,21.95 15.66,21.97C14.32,22 13.89,21.18 12.37,21.18C10.84,21.18 10.37,21.95 9.1,22C7.79,22.05 6.8,20.68 5.96,19.47C4.25,17 2.94,12.45 4.7,9.39C5.57,7.87 7.13,6.91 8.82,6.88C10.1,6.86 11.32,7.75 12.11,7.75C12.89,7.75 14.37,6.68 15.92,6.84C16.57,6.87 18.39,7.1 19.56,8.82C19.47,8.88 17.39,10.1 17.41,12.63C17.44,15.65 20.06,16.66 20.09,16.67C20.06,16.74 19.67,18.11 18.71,19.5M13,3.5C13.73,2.67 14.94,2.04 15.94,2C16.07,3.17 15.6,4.35 14.9,5.19C14.21,6.04 13.07,6.7 11.95,6.61C11.8,5.46 12.36,4.26 13,3.5Z"/>
              </svg>
              App Store
            </a>
          </div>
        </div>

        <div class="relative">
          <div class="grid grid-cols-2 gap-4 transform rotate-2 hover:rotate-0 transition-transform duration-500">
            {screenshotImages.map((src, i) => (
              <div class={`rounded-3xl overflow-hidden shadow-2xl bg-white/5 p-2 backdrop-blur-sm border border-white/10 transition-all duration-300 hover:scale-105 cursor-pointer ${
                i % 2 === 0 ? 'mt-8' : '-mt-8'
              }`} 
              data-key={i}
              onclick={`openModal('${src}', ${i})`}>
                <!-- Mobile frame simulation -->
                <div class="relative">
                  <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-20 h-5 bg-black rounded-b-lg z-10"></div>
                  <img 
                    src={src} 
                    alt={`App screenshot ${i + 1}`} 
                    class="w-full h-80 object-contain rounded-2xl border-2 border-gray-800"
                    loading="lazy" 
                    decoding="async"
                    style="aspect-ratio: 9/16; object-fit: contain;"
                  />
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 text-center">
        <div class="space-y-2">
          <div class="text-3xl font-bold text-blue-600 dark:text-blue-400">50K+</div>
          <div class="text-gray-600 dark:text-gray-300 font-medium">Patients Served</div>
        </div>
        <div class="space-y-2">
          <div class="text-3xl font-bold text-green-600 dark:text-green-400">1K+</div>
          <div class="text-gray-600 dark:text-gray-300 font-medium">Health Workers</div>
        </div>
        <div class="space-y-2">
          <div class="text-3xl font-bold text-purple-600 dark:text-purple-400">98%</div>
          <div class="text-gray-600 dark:text-gray-300 font-medium">Satisfaction Rate</div>
        </div>
        <div class="space-y-2">
          <div class="text-3xl font-bold text-orange-600 dark:text-orange-400">24/7</div>
          <div class="text-gray-600 dark:text-gray-300 font-medium">Support Available</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800" id="features">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
          Designed for
          <span class="text-blue-900 dark:text-blue-400"> African Healthcare</span>
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Built with understanding of local challenges and tailored for low-resource settings
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {features.map((f, index) => (
          <div 
            class="group p-8 rounded-3xl bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 shadow-lg hover:shadow-xl transition-all duration-500 transform hover:-translate-y-2 cursor-pointer"
            data-key={f.title}
          >
            <div class="text-4xl mb-6 transform group-hover:scale-110 transition-transform duration-300">
              {f.icon}
            </div>
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 group-hover:text-blue-900 dark:group-hover:text-blue-400 transition-colors">
              {f.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 leading-relaxed group-hover:text-gray-700 dark:group-hover:text-gray-200 transition-colors">
              {f.body}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Screenshots Section -->
  <section class="py-20 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h3 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
          See It In
          <span class="text-blue-900 dark:text-blue-400"> Action</span>
        </h3>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Click on any screenshot to view it in full size
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
        {screenshotImages.map((src, i) => (
          <div class="group relative rounded-3xl overflow-hidden shadow-2xl bg-white transform hover:scale-105 transition-all duration-500 cursor-pointer" 
               data-key={i}
               onclick={`openModal('${src}', ${i})`}>
            <!-- Mobile frame with notch -->
            <div class="relative bg-black rounded-3xl p-2 border-4 border-gray-800">
              <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-24 h-6 bg-black rounded-b-lg z-10"></div>
              <img 
                src={src} 
                alt={`Afrodoctor app screenshot ${i + 1}`} 
                class="w-full h-96 object-contain rounded-2xl"
                loading="lazy" 
                decoding="async"
                style="aspect-ratio: 9/16;"
              />
            </div>
            <div class="absolute bottom-4 left-4 right-4 bg-white/90 dark:bg-gray-800/90 backdrop-blur-sm rounded-xl p-3 transform translate-y-2 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
              <p class="text-sm font-semibold text-gray-900 dark:text-white text-center">
                Click to enlarge
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section with Trust Indicators -->
  <section class="py-20 bg-blue-900 dark:bg-blue-800 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="space-y-6">
        <h4 class="text-3xl md:text-4xl font-bold">
          Ready to Transform Healthcare Delivery?
        </h4>
        <p class="text-xl text-blue-100 max-w-2xl mx-auto leading-relaxed">
          Join hundreds of clinics and healthcare providers using Afrodoctor to deliver better patient care across Africa.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center pt-6">
          <a href="/contact" class="px-8 py-4 bg-white text-blue-900 font-bold rounded-2xl shadow-2xl hover:shadow-lg transition-all duration-300 transform hover:scale-105">
            Get Started Free
          </a>
          <a href="/contact" class="px-8 py-4 border-2 border-white/30 text-white font-bold rounded-2xl backdrop-blur-sm hover:bg-white/10 transition-all duration-300 transform hover:scale-105">
            Contact Our Team
          </a>
        </div>
        
        <!-- Trust badges -->
      <div class="mt-12 pt-12 border-t border-white/20">
        <p class="text-sm text-white/70 mb-6 font-medium">TRUSTED BY HEALTHCARE PROVIDERS ACROSS AFRICA</p>
        <div class="flex flex-wrap justify-center items-center gap-8 opacity-80">
          <div class="text-white/90 font-semibold">üè• 200+ Facilities</div>
          <div class="text-white/90 font-semibold">‚úì ISO Certified</div>
          <div class="text-white/90 font-semibold">üîí HIPAA Compliant</div>
          <div class="text-white/90 font-semibold">‚ö° 99.9% Uptime</div>
        </div>
      </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h3 class="text-3xl font-bold text-center text-gray-900 dark:text-white mb-12">
        Frequently Asked Questions
      </h3>
      <div class="grid gap-6">
        {[
          { q: "Is Afrodoctor available in my country?", a: "Currently available in 15 African countries with more coming soon." },
          { q: "How secure are my medical records?", a: "We use bank-level encryption and comply with local data protection regulations." },
          { q: "Can I use it without internet?", a: "Yes! Core features work offline and sync when connection is restored." },
          { q: "Is the app really free to use?", a: "Yes! Download and use Afrodoctor completely free. You only pay for actual medical consultations and services you book." }
        ].map((faq, i) => (
          <div class="bg-white dark:bg-gray-900 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-shadow">
            <h4 class="font-bold text-lg text-gray-900 dark:text-white mb-2">{faq.q}</h4>
            <p class="text-gray-600 dark:text-gray-300">{faq.a}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Image Modal -->
  <div id="imageModal" class="fixed inset-0 bg-black bg-opacity-90 z-50 hidden items-center justify-center p-4">
    <div class="relative max-w-4xl max-h-full">
      <button onclick="closeModal()" class="absolute -top-12 right-0 text-white text-4xl hover:text-gray-300 transition-colors z-10">
        &times;
      </button>
      <div class="bg-white rounded-2xl p-4 max-w-sm mx-auto">
        <img id="modalImage" src="" alt="Full size screenshot" class="w-full h-auto rounded-xl" />
      </div>
      <div class="text-center mt-4">
        <p id="modalCaption" class="text-white font-semibold"></p>
      </div>
    </div>
  </div>

  <style>
    @keyframes fade-in {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in {
      animation: fade-in 0.8s ease-out;
    }
    
    /* Ensure mobile screenshots display properly */
    .mobile-screenshot {
      aspect-ratio: 9/16;
      object-fit: contain;
    }

    /* Modal animation */
    #imageModal {
      backdrop-filter: blur(8px);
    }
  </style>

  <script>
    function openModal(src, index) {
      const modal = document.getElementById('imageModal');
      const modalImage = document.getElementById('modalImage');
      const modalCaption = document.getElementById('modalCaption');
      
      modalImage.src = src;
      modalCaption.textContent = `App Screenshot ${index + 1}`;
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      document.body.style.overflow = 'hidden';
    }

    function closeModal() {
      const modal = document.getElementById('imageModal');
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.style.overflow = 'auto';
    }

    // Close modal when clicking outside the image
    document.getElementById('imageModal')?.addEventListener('click', function(e) {
      if (e.target === this) {
        closeModal();
      }
    });

    // Close modal with Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeModal();
      }
    });
  </script>
</BaseLayout>