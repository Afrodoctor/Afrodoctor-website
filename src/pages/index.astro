---
/*
  index.astro (Home)
*/
import BaseLayout from '../layouts/Layout.astro';
import HeroCarousel from '../components/HeroCarousel.astro';
import PricingCard from '../components/PricingCard.tsx';
import Footer from '../components/Footer.astro';

const hmsPlans = [
  { 
    name: "Essentials", 
    price: "$950", 
    period: "/year",
    actionUrl: "/signup?plan=essentials",
    features: [
      "Max. 6 Users",
      "Client Appointment Booking",
      "Online Consultation",
      "Digital Prescriptions",
      "Reception & Triage Modules",
      "Cash Payments Only"
    ], 
    isPrimary: false 
  },
  { 
    name: "Standard", 
    price: "$1,325", 
    period: "/year",
    actionUrl: "/book-demo?plan=standard",
    features: [
      "Max. 15 Users",
      "Everything in Essentials",
      "General Consultation",
      "Lab OR Radiology Module",
      "Pharmacy Module",
      "Procedure Management"
    ], 
    isPrimary: false 
  },
  { 
    name: "Business", 
    price: "$2,900", 
    period: "/year",
    actionUrl: "/book-demo?plan=business",
    features: [
      "Max. 33 Users",
      "Full Lab & Radiology Suites",
      "Inpatient / Admission",
      "Insurance Integration",
      "Online Referral System",
      "Emergency & Treatment"
    ], 
    isPrimary: true 
  },
  { 
    name: "Enterprise", 
    price: "Contact", 
    actionUrl: "/contact?inquiry=enterprise",
    features: [
      "Unlimited Users",
      "All Modules Included",
      "Multi-Site Management",
      "Custom Integrations",
      "Dedicated Support",
      "Fixed Payment Options"
    ], 
    isPrimary: false 
  },
];
---
<BaseLayout title="Home">
  <HeroCarousel />

  <section id="solutions" class="py-20 md:py-28 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
          Expanding Digital Access to Health Care Services
        </h2>
        <div class="w-24 h-1 bg-blue-800 dark:bg-blue-700 mx-auto rounded-full"></div>
      </div>

      <div class="grid md:grid-cols-2 gap-8 md:gap-10">
        <!-- Afrodoctor Mobile Application -->
        <div class="transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl border border-gray-200 dark:border-gray-700 group relative bg-white dark:bg-gray-800 p-10 rounded-3xl overflow-hidden">
          <div class="absolute inset-0 bg-blue-500/5 dark:bg-blue-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

          <div class="relative z-10">
            <h3 class="text-3xl font-bold text-gray-900 dark:text-white mb-4 group-hover:text-blue-800 dark:group-hover:text-blue-600 transition-colors duration-300">
              Afrodoctor Mobile Application
            </h3>

            <p class="text-gray-600 dark:text-gray-300 mb-6 text-lg leading-relaxed">
              By directly linking patients to needed health services, the Afrodoctor mobile application reduces indirect costs of travel and lodging and eliminates fraud risk. This is the consumer-facing side of our ecosystem.
            </p>

            <ul class="space-y-4 mb-8">
              <li class="flex items-start group/item">
                <div class="flex-shrink-0 w-6 h-6 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center mr-3 mt-0.5">
                  <svg class="w-4 h-4 text-blue-800 dark:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <span class="text-gray-700 dark:text-gray-300 leading-relaxed">Secure medical appointment booking with vetted health workers</span>
              </li>

              <li class="flex items-start group/item">
                <div class="flex-shrink-0 w-6 h-6 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center mr-3 mt-0.5">
                  <svg class="w-4 h-4 text-blue-800 dark:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <span class="text-gray-700 dark:text-gray-300 leading-relaxed">Real-time online consultations via video or chat</span>
              </li>

              <li class="flex items-start group/item">
                <div class="flex-shrink-0 w-6 h-6 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center mr-3 mt-0.5">
                  <svg class="w-4 h-4 text-blue-800 dark:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <span class="text-gray-700 dark:text-gray-300 leading-relaxed">Digital access to complete medical records</span>
              </li>

              <li class="flex items-start group/item">
                <div class="flex-shrink-0 w-6 h-6 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center mr-3 mt-0.5">
                  <svg class="w-4 h-4 text-blue-800 dark:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <span class="text-gray-700 dark:text-gray-300 leading-relaxed">Integrated payment and insurance information management</span>
              </li>
            </ul>

            <div class="flex gap-3 items-center">
              <a href="/afrodoctor-app" class="px-6 py-3 bg-blue-800 hover:bg-blue-900 dark:bg-blue-700 dark:hover:bg-blue-600 text-white font-semibold rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105 inline-flex items-center text-sm" aria-label="Download the Afrodoctor app now">
                Download the Afrodoctor app now
                <span class="ml-2 transition-transform">↓</span>
              </a>

              <a href="/afrodoctor-app" class="px-5 py-3 border border-blue-800 text-blue-800 dark:text-blue-600 rounded-xl font-semibold hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-all duration-300 text-sm" aria-label="Learn more about Afrodoctor app">
                Learn more
              </a>
            </div>
          </div>
        </div>

        <!-- Afrodoctor HMS -->
        <div class="transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl border border-gray-200 dark:border-gray-700 group relative bg-white dark:bg-gray-800 p-10 rounded-3xl overflow-hidden">
          <div class="absolute inset-0 bg-blue-500/5 dark:bg-blue-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

          <div class="relative z-10">
            <h3 class="text-3xl font-bold text-gray-900 dark:text-white mb-4 group-hover:text-blue-800 dark:group-hover:text-blue-600 transition-colors duration-300">
              Afrodoctor Hospital Management System
            </h3>

            <p class="text-gray-600 dark:text-gray-300 mb-6 text-lg leading-relaxed">
              This comprehensive system is a backbone for health workers, enabling facility management, facility scheduling, streamlined patient care pathways, and seamless referrals across the health network.
            </p>

            <ul class="space-y-4 mb-8">
              <li class="flex items-start">
                <div class="flex-shrink-0 w-6 h-6 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center mr-3 mt-0.5">
                  <svg class="w-4 h-4 text-blue-800 dark:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <span class="text-gray-700 dark:text-gray-300 leading-relaxed">Universal patient scheduling and health facility workflow organization</span>
              </li>

              <li class="flex items-start">
                <div class="flex-shrink-0 w-6 h-6 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center mr-3 mt-0.5">
                  <svg class="w-4 h-4 text-blue-800 dark:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <span class="text-gray-700 dark:text-gray-300 leading-relaxed">Streamlined, transparent referral systems between facilities</span>
              </li>

              <li class="flex items-start">
                <div class="flex-shrink-0 w-6 h-6 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center mr-3 mt-0.5">
                  <svg class="w-4 h-4 text-blue-800 dark:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <span class="text-gray-700 dark:text-gray-300 leading-relaxed">Reduces need for expensive facility-specific IT investment</span>
              </li>

              <li class="flex items-start">
                <div class="flex-shrink-0 w-6 h-6 bg-blue-100 dark:bg-blue-900/30 rounded-full flex items-center justify-center mr-3 mt-0.5">
                  <svg class="w-4 h-4 text-blue-800 dark:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <span class="text-gray-700 dark:text-gray-300 leading-relaxed">Communicates directly with the Afrodoctor mobile application</span>
              </li>
            </ul>

            <a href="#plans" class="inline-flex items-center text-blue-800 dark:text-blue-600 font-semibold hover:text-blue-900 dark:hover:text-blue-500 group-hover:gap-2 transition-all duration-300" aria-label="See HMS plans">
              Check Our HMS Plans Below
              <span class="ml-2 group-hover:translate-x-1 transition-transform">→</span>
            </a>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Plans and Immersed sections -->
  <section id="plans" class="py-20 md:py-28 bg-gradient-to-b from-gray-50 to-white dark:from-gray-800 dark:to-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
          Afrodoctor HMS Plans for Health Facilities
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto leading-relaxed">
          Tailored solutions for every size of health facility, from small clinics to large regional systems.
        </p>
        <div class="w-24 h-1 bg-blue-800 dark:bg-blue-700 mx-auto rounded-full mt-6"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-8">
        {hmsPlans.map(plan => (
          <PricingCard client:load
            name={plan.name}
            price={plan.price}
            period={plan.period}
            features={plan.features}
            isPrimary={plan.isPrimary}
            actionUrl={plan.actionUrl}
          />
        ))}
      </div>
    </div>
  </section>

  <section id="impact" class="py-20 md:py-28 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
          Building Capacity: The Immersed Project
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto leading-relaxed">
          Training and supporting marginalized communities in digital skills for inclusive health access.
        </p>
        <div class="w-24 h-1 bg-blue-800 dark:bg-blue-700 mx-auto rounded-full mt-6"></div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-16">
        <div class="transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl border border-gray-200 dark:border-gray-700 group relative p-8 bg-blue-50 dark:bg-blue-900/10 rounded-3xl overflow-hidden">
          <div class="relative z-10 text-center">
            <p class="text-5xl md:text-6xl font-extrabold text-blue-800 mb-3">26</p>
            <p class="text-gray-700 dark:text-gray-300 font-semibold text-base md:text-lg">Young Women Champions</p>
          </div>
        </div>

        <div class="transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl border border-gray-200 dark:border-gray-700 group relative p-8 bg-red-50 dark:bg-red-900/10 rounded-3xl overflow-hidden">
          <div class="relative z-10 text-center">
            <p class="text-5xl md:text-6xl font-extrabold text-red-700 mb-3">86</p>
            <p class="text-gray-700 dark:text-gray-300 font-semibold text-base md:text-lg">Persons with Disabilities Champions</p>
          </div>
        </div>

        <div class="transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl border border-gray-200 dark:border-gray-700 group relative p-8 bg-blue-50 dark:bg-blue-900/10 rounded-3xl overflow-hidden">
          <div class="relative z-10 text-center">
            <p class="text-5xl md:text-6xl font-extrabold text-blue-800 mb-3">100+</p>
            <p class="text-gray-700 dark:text-gray-300 font-semibold text-base md:text-lg">Marginalized Community Members Reached</p>
          </div>
        </div>
      </div>

      <div class="max-w-5xl mx-auto">
        <h3 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">Immersed Project — in-action Highlights</h3>

        <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-8">
          <a href="/immersed" class="group block relative overflow-hidden rounded-2xl shadow-xl dark:shadow-gray-800 hover:shadow-2xl dark:hover:shadow-gray-700 transition-all duration-500" aria-label="Immersed training session">
            <div class="absolute inset-0 bg-gradient-to-t from-blue-900/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
            <img src="/images/immersed/DSC_0113.JPG" alt="Students with laptops during digital skills training" loading="lazy" decoding="async" class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-700" />
          </a>

          <a href="/immersed" class="group block relative overflow-hidden rounded-2xl shadow-xl dark:shadow-gray-800 hover:shadow-2xl dark:hover:shadow-gray-700 transition-all duration-500" aria-label="Community outreach training">
            <div class="absolute inset-0 bg-gradient-to-t from-blue-900/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
            <img src="/images/immersed/DSC_0140.JPG" alt="Community outreach and health education session" loading="lazy" decoding="async" class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-700" />
          </a>

          <a href="/immersed" class="group block relative overflow-hidden rounded-2xl shadow-xl dark:shadow-gray-800 hover:shadow-2xl dark:hover:shadow-gray-700 transition-all duration-500" aria-label="Digital skills instruction">
            <div class="absolute inset-0 bg-gradient-to-t from-blue-900/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
            <img src="/images/pwds/pwd5.jpg" alt="Instructor demonstrating digital health tools" loading="lazy" decoding="async" class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-700" />
          </a>
        </div>

        <div class="text-center flex flex-col sm:flex-row justify-center gap-4 items-center">
          <a href="/immersed" class="px-6 py-3 bg-blue-800 hover:bg-blue-900 dark:bg-blue-700 dark:hover:bg-blue-600 text-white font-semibold rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105 inline-flex items-center px-8 py-4 rounded-2xl" aria-label="Explore the Immersed project">
            Explore the Immersed - Project
            <span class="ml-2">→</span>
          </a>

          <a href="/documents/immersed-project-report.pdf" class="px-5 py-3 border border-blue-800 text-blue-800 dark:text-blue-600 rounded-xl font-semibold hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-all duration-300 text-sm" aria-label="Download Immersed project report" download target="_blank" rel="noopener noreferrer">
            Download Immersed Project Report
          </a>
        </div>
      </div>

      <div class="mt-20 text-center">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">In Partnership With:</h3>
         <div class="w-34 h-1 bg-blue-800 dark:bg-blue-700 mx-auto rounded-full mb-4"></div>
        <div class="flex flex-wrap justify-center items-center gap-x-20 gap-y-8">
          <img src="/images/partners/USAID.png" alt="USAID" class="h-28 md:h-32 lg:h-46 transition-all duration-300 hover:scale-105" loading="lazy" decoding="async" />
          <img src="/images/partners/yali2.png" alt="Young African Leaders Initiative (YALI)" class="h-28 md:h-32 lg:h-40 transition-all duration-300 hover:scale-105" loading="lazy" decoding="async" />
          <img src="/images/partners/kenyatta-university.png" alt="Kenyatta University" class="h-24 md:h-28 lg:h-32 transition-all duration-300 hover:scale-105" loading="lazy" decoding="async" />
        </div>
      </div>
    </div>
  </section>

  <!-- Footer component -->
  <Footer />
</BaseLayout>
