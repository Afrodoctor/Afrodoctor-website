---
import BaseLayout from '../layouts/Layout.astro';

// Grab the plan from the URL parameters if available
const plan = Astro.url.searchParams.get('plan') || 'General Inquiry';
---

<BaseLayout title="Book a Demo | Afrodoctor">
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900 pt-24 pb-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white sm:text-4xl">
          Schedule Your HMS Demo
        </h1>
        <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
          See how Afrodoctor can streamline your facility's operations.
        </p>
      </div>

      <div class="bg-white dark:bg-gray-800 py-8 px-4 shadow sm:rounded-lg sm:px-10 border border-gray-200 dark:border-gray-700">
        <form class="space-y-6" action="#" method="POST">
          
          {/* Selected Plan Read-only Field */}
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">
              Interested Plan
            </label>
            <div class="mt-1">
              <input 
                type="text" 
                name="plan" 
                value={plan.charAt(0).toUpperCase() + plan.slice(1)} 
                readonly
                class="appearance-none block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm bg-gray-100 dark:bg-gray-700 text-gray-500 dark:text-gray-400 sm:text-sm"
              />
            </div>
          </div>

          <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
            <div>
              <label for="first-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">First Name</label>
              <div class="mt-1">
                <input type="text" name="first-name" id="first-name" required class="appearance-none block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white sm:text-sm">
              </div>
            </div>

            <div>
              <label for="last-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Last Name</label>
              <div class="mt-1">
                <input type="text" name="last-name" id="last-name" required class="appearance-none block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white sm:text-sm">
              </div>
            </div>
          </div>

          <div>
            <label for="hospital" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Hospital / Clinic Name</label>
            <div class="mt-1">
              <input type="text" name="hospital" id="hospital" required class="appearance-none block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white sm:text-sm">
            </div>
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Work Email</label>
            <div class="mt-1">
              <input type="email" name="email" id="email" required class="appearance-none block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white sm:text-sm">
            </div>
          </div>

          <div>
            <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-800 hover:bg-blue-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-300">
              Request Demo
            </button>
          </div>
          
          <p class="text-xs text-center text-gray-500 dark:text-gray-400 mt-4">
            Our sales team will contact you within 24 hours to schedule a walkthrough tailored to your facility size.
          </p>
        </form>
      </div>
    </div>
  </div>
</BaseLayout>