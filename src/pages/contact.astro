---
import BaseLayout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.tsx';
---
<BaseLayout title="Contact Us">
  <section class="relative py-24 bg-blue-50 dark:bg-blue-900/20 border-b border-gray-100 dark:border-gray-700 overflow-hidden">
    <div class="absolute top-0 right-0 w-96 h-96 bg-blue-200 dark:bg-blue-800 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-blue-200 dark:bg-blue-800 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-2000"></div>
   
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="inline-block mb-6 px-4 py-2 bg-blue-100 dark:bg-blue-800/50 text-blue-700 dark:text-blue-300 rounded-full text-sm font-semibold">
        üì¨ Get In Touch
      </div>
      <h1 class="text-5xl md:text-6xl font-extrabold text-gray-900 dark:text-white mb-6 leading-tight">
        Let's Transform Health Together
      </h1>
      <p class="text-xl max-w-3xl mx-auto text-gray-600 dark:text-gray-300 leading-relaxed">
        Whether you're a health facility looking to adopt the <strong class="text-blue-900 dark:text-blue-400">Afrodoctor HMS</strong> or a partner seeking collaboration, we're ready to connect.
      </p>
    </div>
  </section>

  <section class="py-24 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 grid md:grid-cols-2 gap-12 items-start">
     
      <div id="inquiry">
        <ContactForm client:load />
      </div>

      <div class="space-y-8">
       
        <div class="transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl border border-gray-200 dark:border-gray-700 group relative bg-blue-900 dark:bg-blue-800 p-10 rounded-3xl shadow-2xl overflow-hidden">
          <div class="absolute inset-0 bg-blue-800 dark:bg-blue-700 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
         
          <div class="relative z-10">
            <div class="flex items-center mb-6">
              <div class="w-16 h-16 bg-white/20 dark:bg-white/10 backdrop-blur-sm rounded-2xl flex items-center justify-center mr-4">
                <span class="text-5xl">‚ù§Ô∏è</span>
              </div>
              <h2 class="text-3xl font-bold text-white">Support Our Mission</h2>
            </div>
           
            <p class="text-white/90 mb-8 text-lg leading-relaxed">
              Your contribution helps us expand access to quality health services in underserved communities across East Africa through training, mentorship, and provision of digital gadgets.
            </p>
           
            <a
              id="donate"
              href="mailto:donations@hsv.co.ug?subject=Donation%20to%20HSV"
              class="group/btn inline-flex items-center justify-center w-full py-4 px-8 text-lg font-bold rounded-2xl text-blue-600 bg-white hover:bg-blue-50 dark:bg-gray-100 dark:hover:bg-gray-200 dark:text-blue-400 transition-all duration-300 shadow-lg hover:shadow-xl"
              aria-label="Donate now"
            >
              DONATE NOW
              <span class="ml-2 group-hover/btn:translate-x-1 transition-transform">‚Üí</span>
            </a>
          </div>
        </div>

        <div class="bg-gradient-to-br from-gray-50 to-white dark:from-gray-800 dark:to-gray-900 p-10 rounded-3xl shadow-xl border border-gray-100 dark:border-gray-700">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6 flex items-center">
            <span class="text-3xl mr-3">üìç</span>
            Our Details
          </h3>
          <ul class="space-y-5">
            <li class="flex items-start group">
              <div class="flex-shrink-0 w-10 h-10 bg-blue-100 dark:bg-blue-900/30 rounded-xl flex items-center justify-center mr-4 group-hover:bg-blue-200 dark:group-hover:bg-blue-800 transition-colors duration-300">
                <span class="text-blue-600 dark:text-blue-300 text-xl">üìß</span>
              </div>
              <div>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">Email Us</p>
                <a href="mailto:info@hsv.co.ug" class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-semibold transition-colors duration-300">info@hsv.co.ug</a>
              </div>
            </li>
           
            <li class="flex items-start group">
              <div class="flex-shrink-0 w-10 h-10 bg-blue-100 dark:bg-blue-900/30 rounded-xl flex items-center justify-center mr-4 group-hover:bg-blue-200 dark:group-hover:bg-blue-800 transition-colors duration-300">
                <span class="text-blue-600 dark:text-blue-300 text-xl">üìç</span>
              </div>
              <div>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">Visit Us</p>
                <p class="text-gray-700 dark:text-gray-300 font-medium">HSV Regional Headquarters<br/>Kampala, Uganda</p>
              </div>
            </li>
           
            <li class="flex items-start group">
              <div class="flex-shrink-0 w-10 h-10 bg-blue-100 dark:bg-blue-900/30 rounded-xl flex items-center justify-center mr-4 group-hover:bg-blue-200 dark:group-hover:bg-blue-800 transition-colors duration-300">
                <span class="text-blue-600 dark:text-blue-300 text-xl">üìû</span>
              </div>
              <div>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">Call Us</p>
                <a href="tel:+256700123456" class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-semibold transition-colors duration-300">+256 700 123 456</a>
              </div>
            </li>
          </ul>
        </div>
       
        <div class="bg-blue-50 dark:bg-blue-900/20 border-l-4 border-blue-600 dark:border-blue-400 p-6 rounded-r-2xl">
          <div class="flex items-center">
            <span class="text-3xl mr-3">‚ö°</span>
            <div>
              <p class="font-bold text-gray-900 dark:text-white">Quick Response Time</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">We typically respond within 24 hours</p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

</BaseLayout>

<style>
  @keyframes blob {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(30px, -50px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
  }
 
  .animate-blob {
    animation: blob 7s infinite;
  }
 
  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style>